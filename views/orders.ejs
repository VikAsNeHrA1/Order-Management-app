<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>101 Distributors</title>
    <link rel="stylesheet" href="styles.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* CSS from styles.css */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #333; 
            color: white;
        }

        .main-content {
            background-color: #333;
            padding: 20px 0;
        }

        .logo {
            font-size: 24px;
            font-weight: bold;
            margin-right: 30px;
        }

        nav ul {
            list-style-type: none;
            padding: 0;
            display: flex;
            align-items: center;
        }

        nav li {
            margin: 0 15px;
        }

        nav {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 20px 450px;
        }

        nav a {
            color: white;
            text-decoration: none;
            font-weight: bold;
        }

        main {
            display: flex;
            flex-direction: column;
            align-items: center;
            height: calc(100vh - 100px);
        }

        h1 {
            font-size: 48px;
            margin-bottom: 20px;
        }

        button {
            background-color: teal;
            color: white;
            padding: 15px 25px;
            border: none;
            border-radius: 30px;
            cursor: pointer;
            font-size: 18px;
            font-weight: bold;
        }

        footer {
            width: 100%;
            display: flex;
            justify-content: center;
            padding: 20px 0;
        }

        .social-icon {
            margin: 0 10px;
            font-size: 24px;
            color: white;
            text-decoration: none;
        }
    </style>
</head>

<body>
    <header>
        <nav>
            <div class="logo">LOGO</div>
            <ul>
                <li><a href="#">Home</a></li>
                <li><a href="#">Gallery</a></li>
                <li><a href="#">About us</a></li>
                <li><a href="#">Contact</a></li>
            </ul>
        </nav>
    </header>
    <div class="main-content">
        <main>
            <h1>Welcome to 101 Distributors</h1>
            <button>Contact us</button>
        </main>
    </div>
    <footer>
        <a href="#" class="social-icon">f</a>
        <a href="#" class="social-icon">X</a>
        <a href="#" class="social-icon">D</a>
    </footer>

    <!-- Content from orders.ejs -->
    <div class="container mt-5">
        <h1>Order Management</h1>

        <div class="my-5">
            <h3>Add a New Order</h3>
            <form action="/orders/add" method="post">
                <div class="mb-3">
                    <label for="storeName" class="form-label">Store Name:</label>
                    <input type="text" class="form-control" id="storeName" name="storeName" required>
                </div>
                <div class="mb-3">
                    <label for="orderList" class="form-label">Order List:</label>
                    <textarea class="form-control" id="orderList" name="orderList" rows="3" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Add Order</button>
            </form>
        </div>

        <div class="my-5">
            <h3>Current Orders</h3>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Store Name</th>
                        <th scope="col">Order List</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% orders.forEach((order, index) => { %>
                    <tr>
                        <th scope="row"><%= index + 1 %></th>
                        <td><%= order.storeName %></td>
                        <td><%= order.orderList %></td>
                        <td>
                            <form action="/orders/update/<%= order._id %>" method="post" class="d-inline">
                                <button type="submit" class="btn btn-warning btn-sm">Update</button>
                            </form>
                            <form action="/orders/delete/<%= order._id %>" method="post" class="d-inline">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
